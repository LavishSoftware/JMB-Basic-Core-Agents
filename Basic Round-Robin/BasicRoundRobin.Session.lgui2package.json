{
    "$schema": "http://www.lavishsoft.com/schema/lgui2Package.json",    
    "templates": {
        "brr.allButtons":{
            "type":"panel",
            "name":"basicRoundRobin.allButtons",
            "visibility":"visible",
            "horizontalAlignment":"stretch",
            "verticalAlignment":"stretch",
            "margin":3,
            "borderThickness":3,
            "borderBrush":{
                "color":"#ffffff00"
            },
            "backgroundBrush":{
                "color":"#00000000"
            },
            "acceptsKeyboardFocus":false,
            "acceptsMouseFocus":false,
            "inputHooks": {
                "hook1":{
                    "control":{
                        "controlType": "button",
                        "deviceType": "keyboard",
                        "minValue": 0.0,
                        "maxValue": 0.0
                    },
                    "eventHandler":{
                        "type":"method",
                        "object":"BRRSession",
                        "method":"OnButtonHook"
                    },
                    "keyboardFocus": false,
                    "mouseFocus": false
                }
            }
        }
    },
    "elements": [
        {
            "type": "window",
            "name": "basicRoundRobin.window",
            "title": "Basic Round-Robin",
            "visibility":"hidden"            
        }
    ]
}